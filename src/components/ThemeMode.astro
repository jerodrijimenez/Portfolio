<article class="push">
    <div class="toggle">
        <input class="toggle-theme-state" type="checkbox">
        <div class="indicator"></div>
    </div>
</article>

<style>
    article{
		box-sizing: border-box;
		overflow: hidden;
		width: 100%;
        height: 100%;
		justify-content: center;
		align-items: center;
		display: flex;
		border-radius: 20px;
		background: var(--bg-color); 
        box-shadow: none;
	}
    .toggle{
        isolation: isolate;
        position: relative;
        height: 45%;
        width: 70%;
        overflow: hidden;
        border-radius: 30px;
        box-shadow: var(--toggle-shadow);           
    }
    .toggle-theme-state{
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: 10;
        cursor: pointer;
        opacity: 0;
    }
    .indicator{
        width: 100%;
        height: 100%;
        border-radius: 30px;
        background-color: var(--bg-color);
        box-shadow: var(--indicator-shadow);
        transform: var(--trans-ho);
        transition: .4s cubic-bezier(.85, .05, .18, 1.35);
        display: flex;
        align-items: center;
        justify-content: end;
        padding-top: 0;
        padding-bottom: 0;
        padding-right: 15%;
        padding-left: 15%;
    }
    .indicator p {
        font-weight: 500;
        font-size: var(--font-size-title3);
        margin: 0;
    }
    .d{
        position: relative;
        display: none;
        color: var(--bg-color);
    }
    .l{
        position: relative;
        display: flex;
        color: var(--primary-color); 
    }
    .toggle-theme-state:checked ~ .indicator{
        transform: var(--trans-ho);
        justify-content: start;
        .l{
        display: none;
            }
        .d{
        display: flex;
            }
    }

    @media (width > 500px){
        .toggle{
            width: 45%;
            height: 70%;
        }
        .indicator{
            transform: var(--trans-ve);
            justify-content: center;
            align-items: end;
            padding-bottom: 30%;
            padding-right: 15%;
            padding-left: 15%; 
        }
        .toggle-theme-state:checked ~ .indicator{
            transform: var(--trans-ve);
            justify-content: center;
            padding-top: 30%;
            align-items: start;
        }
    }

</style>

<script>
    document.addEventListener('DOMContentLoaded', ()=>{

    const switcherTheme = document.querySelector('.toggle-theme-state');
    const root = document.documentElement;

    if(root.getAttribute('data-theme') === 'dark'){
        switcherTheme.checked = true;
    }

    switcherTheme.addEventListener('click',toggleTheme);

    function toggleTheme(){
        const setTheme = switcherTheme.checked ? 'dark' : 'light';
        root.setAttribute('data-theme', setTheme);
        localStorage.setItem('theme', setTheme);
    }
});
</script>