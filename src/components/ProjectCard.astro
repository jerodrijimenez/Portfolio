---
const {title, image, tecno, resume, git} = Astro.props;
---

<article class="card">
        <div class="image"><img src={image} alt={title}></div>
        <div class="title"><h2>{title}</h2></div>
        <div class="tecno"><h3>{tecno}</h3></div>
        <div class="resume"><p>{resume}</p></div>
        <div class="links">
            <div class="git"><a href={git}><h3>Repo</h3><i class="fab fa-github"></i></a></div>
        </div>     
</article>

<style>
    *{
        padding: 0;
        margin: 0;
    }
    .card{
        display: grid;
        justify-content: center;
        align-items: center;
        width: 95%;
        height: 100%;
        padding: 2%;
        padding-bottom: 3%;
        border-radius: 20px;
        box-shadow: 3px 3px 7px rgba(0, 0, 0, 0.3);
        background-color: var(--bg-color);
        grid-template-areas:
        "image image"
        "image image"
        "title title"
        "tecno tecno"
        "resume resume"
        "resume resume"
        "resume resume"
        "resume resume"
        "links links"
        "links links";
    }
    .card .image{
        grid-area: image;
        border-radius: 15px;
        justify-content: center;
        align-items: center;
    }
    .card .image img{
        box-shadow: var(--primary-shadow);
        min-width: 100px;
        min-height: 100px;
        width: 100px;
        height: 100px;
        border-radius: 15px;
    }
    .card .title{
        grid-area: title;
        font-size: var(--font-size-title3);
        color: var(--primary-color);
        padding-left: 5%;
        padding-right: 5%;
        text-align: center;
    }
    .card .tecno{
        grid-area: tecno;
        font-size: var(--font-size-title3);
        color: var(--title-color); 
        padding-left: 5%;
        padding-right: 5%;
        text-align: left;
    }
    .card .resume{
        width: 100%;
        height: 100%;
        grid-area: resume;
        font-size: var(--font-size-title5);
        color: var(--title-color2); 
        text-align: justify;
        padding-left: 1%;
        padding-right: 1%;
    }
    .card .resume p{
        min-height: 200px;
        padding: 10px;
        border-radius: 10px;
        backdrop-filter: blur(15px);
        background-color: var(--resume-bg-color);
        box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }
    .card .links{
        height: 100%;
        grid-area: links;
        display: flex;
        padding-inline: 5%;
        flex-direction: row;
        justify-content: center;
    }
    .card .links .git{
        width: fit-content;
    }
    .card .links .git a{
        width: 100%;
		height: 100%;
		justify-content: center;
		align-items: center;
		display: flex;
		text-decoration: none;
		list-style: none;
        border-radius: 10px;
        gap: 10px;
        padding-inline: 20px;
        background-color: var(--links-color);
        color: var(--links-text-color);
        box-shadow: 2px 2px 20px #6d22a0;
    }
    .card .links .git a i{
		font-size: 1.5em; 
        transition-delay: 0s;
        transition: .05s;
    }
    .card .links .git a h3{
        transition-delay: 0s;
        transition: .05s;
    }

/*-------------------Responsive------------------*/
    @media (width > 500px){
        .card{
            height: 93%;
            grid-template-areas:
            "image title title title"
            "image tecno tecno tecno"
            "resume resume resume resume"
            "resume resume resume resume"
            "resume resume resume resume"
            "links links links links";
        }
        .card .title{
            text-align: left;
        }
        .card .links{
            justify-content: right;
        }
    }

/*----------------------------------------------------*/
    @media (width > 800px){
        .card{
            grid-template-areas:
            "image title title"
            "image tecno tecno"
            "image resume resume"
            "image resume resume"
            "image links links";
        }
        .card .image img{
            width: 200px;
            height: 200px;
            min-width: 200px;
            min-height: 200px;
        }
        .card .resume{
            padding-left: 5%;
            padding-right: 5%;
        }
        .card .links .git a{
            background-color: var(--bg-color);
            color: var(--secondary-color);
            box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.3);
        }
        .card .links .git a:hover{
            box-shadow: 5px 5px 20px #6d22a0;
            background-color: var(--links-color);
            color: var(--links-text-color);
        }
    }

</style>
